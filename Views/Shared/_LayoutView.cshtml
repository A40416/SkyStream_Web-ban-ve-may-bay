    <!-- load stylesheets -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">  <!-- Google web font "Open Sans" -->
    <link rel="stylesheet" href="~/contentWeb/font-awesome-4.7.0/css/font-awesome.min.css">                <!-- Font Awesome -->
    <link rel="stylesheet" href="~/contentWeb/css/bootstrap.min.css">                                      <!-- Bootstrap style -->
    <link rel="stylesheet" type="~/contentWeb/text/css" href="~/contentWeb/slick/slick.css" />
    <link rel="stylesheet" type="~/contentWeb/text/css" href="~/contentWeb/slick/slick-theme.css" />
    <link rel="stylesheet" type="~/contentWeb/text/css" href="~/contentWeb/css/datepicker.css" />
